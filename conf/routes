# An example controller showing a sample home page
GET     /                           controllers.HomeController.index()
GET     /api                        controllers.ApplicationController.index()
POST    /matching                   controllers.ApplicationController.createMatching()
GET     /matching/:id               controllers.ApplicationController.readMatching(id: String)
PUT     /matching/:id               controllers.ApplicationController.updateMatching(id: String)
DELETE  /matching/:id               controllers.ApplicationController.deleteMatching(id: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
